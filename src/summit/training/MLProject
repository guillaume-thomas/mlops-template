name: summittest-experiment

docker_env:
  image: quay.io/gthomas59800/summittest

entry_points:

    main:
        parameters:
            path: str
            n_estimators: {type: int, default: 100}
            max_depth: {type: int, default: 10}
            random_state: {type: int, default: 42}
        command: "uv -n run -m summit.training.main --input_data_path {path} --n_estimators {n_estimators} --max_depth {max_depth} --random_state {random_state}"